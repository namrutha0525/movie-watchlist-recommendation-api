# ============================================
# Movie Watchlist & Recommendation API
# Environment Configuration
# ============================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
# ============================================

# ---------- Server ----------
PORT=8080
GIN_MODE=debug

# ---------- PostgreSQL ----------
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=movie_recommend
DB_SSLMODE=disable

# ---------- Redis ----------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ---------- OMDb API ----------
OMDB_API_KEY=
OMDB_BASE_URL=http://www.omdbapi.com

# ---------- JWT Authentication ----------
JWT_SECRET=
JWT_EXPIRY_HOURS=24

# ---------- Cache TTL (seconds) ----------
CACHE_SEARCH_TTL=86400
CACHE_MOVIE_TTL=604800
